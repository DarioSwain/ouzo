{
  "config": {
    "platform": {
      "php": "5.6.0"
    }
  },
  "name": "letsdrink/ouzo",
  "description": "Ouzo PHP MVC framework",
  "homepage": "http://ouzoframework.org/",
  "minimum-stability": "stable",
  "license": "MIT",
  "keywords": [
    "php",
    "mvc",
    "framework",
    "orm",
    "tdd"
  ],
  "authors": [
    {
      "name": "Ouzo developers",
      "email": "ouzo-framework@googlegroups.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Ouzo\\": [
        "src/Ouzo/Core",
        "src/Ouzo/Goodies",
        "src/Ouzo/Inject"
      ],
      "Command\\": "bin/"
    }
  },
  "autoload-dev": {
    "classmap": ["test/"]
  },
  "require": {
    "d11wtq/boris": "1.0.8",
    "symfony/console": "v3.2.*",
    "filp/whoops": "1.1.*",
    "psr/log": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "5.7.*",
    "satooshi/php-coveralls": "1.0.1"
  },
  "replace": {
    "letsdrink/ouzo-goodies": "self.version",
    "letsdrink/ouzo-inject": "self.version"
  },
  "archive": {
    "exclude": [
      "/test",
      "/build",
      "/config",
      "/vendor",
      "/*.xml",
      "/*.sh",
      "/bootstrap_test.php"
    ]
  }
}
